#include <iostream>
#include <iomanip>  

int main() {
    int mode;
    double temp;

    std::cout << "Оберіть режим (1 – Цельсій -> Фаренгейт, 2 – Фаренгейт -> Цельсій): ";
    std::cin >> mode;
    
    std::cout << "Введіть температуру: ";
    std::cin >> temp;

    
    if ((mode == 1 && temp < -273.15) || (mode == 2 && temp < -459.67)) {
        std::cout << "Занадто холодно для підрахунку!" << std::endl;
    } else {
        std::cout << std::fixed << std::setprecision(2);
        if (mode == 1) {
           
            double fahrenheit = temp * 9.0 / 5.0 + 32;
            std::cout << "Температура у Фаренгейтах: " << fahrenheit << " °F" << std::endl;
        } else if (mode == 2) {
            
            double celsius = (temp - 32) * 5.0 / 9.0;
            std::cout << "Температура у Цельсіях: " << celsius << " °C" << std::endl;
        } else {
            std::cout << "Невідомий режим!" << std::endl;
        }
    }

    return 0;
}
